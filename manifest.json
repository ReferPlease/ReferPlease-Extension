{
    "manifest_version": 3,
    "name": "Add Referrals",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*",
                "https://www.linkedin.com/**",
                "https://www.referplease.com/*",
                "https://www.referplease.com/**",
                "http://localhost:81/*",
                "http://localhost:81/**"
            ],
            "js": [
                "linkedin_content.js",
                "referplease_content.js",
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://www.referplease.com/*"
    ],
    "permissions": [
        "webRequest",
        "clipboardRead"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    }
}